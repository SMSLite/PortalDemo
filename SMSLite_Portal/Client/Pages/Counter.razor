@page "/counter"
@using SMSLite_Portal.Shared

@*@attribute [Authorize(Roles= MyRoles.Role_ADMIN)] *@ 

@attribute [Authorize(Roles=MyRoles.Role_ADMIN + "," + MyRoles.Role_STUDENT)]


<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
